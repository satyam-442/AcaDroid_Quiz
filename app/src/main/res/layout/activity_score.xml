    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/score_background_design"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/doneBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/close"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"/>

            <ImageView
                android:id="@+id/scoreGold"
                android:layout_width="110dp"
                android:layout_height="140dp"
                android:src="@drawable/logo_quiz"
                android:padding="15dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/scoredScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score is "
                    android:fontFamily="@font/martel_sans_bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/totalScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" out of 10"
                    android:fontFamily="@font/martel_sans_bold"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/doppio_one"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="congratulations"
                android:textAllCaps="true"
                android:textSize="23sp"
                android:textColor="@color/colorBackground"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/playerUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/doppio_one"
                android:paddingBottom="10dp"
                android:paddingTop="2dp"
                android:text="@string/username"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@color/colorBackground"/>

            <TextView
                android:id="@+id/scoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/doppio_one"
                android:paddingTop="2dp"
                android:paddingBottom="10dp"
                android:text="You are the Winner!"
                android:textAllCaps="false"
                android:textColor="@color/colorBackground"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/shareBtn"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/btncolor"
                android:text="Share"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:textAllCaps="false"/>

        </LinearLayout>

